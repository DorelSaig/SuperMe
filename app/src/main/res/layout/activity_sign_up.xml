<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@color/main_background"
    tools:context=".Activities.SignUpActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/panel_IMG_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_superme" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/form_EDT_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/panel_IMG_logo"
        app:boxBackgroundMode="outline"
        app:errorEnabled="true"
        android:hint="שם מלא">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="textPersonName"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/form_EDT_base"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/panel_IMG_logo"
        app:boxBackgroundMode="outline"
        app:errorEnabled="true"
        android:hint="שם מלא">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="textPersonName"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/panel_BTN_login"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/main_green"
        android:elevation="10dp"
        android:fontFamily="@font/rubik"
        android:text="עדכן"
        android:textSize="20sp"
        android:textStyle="bold"
        app:elevation="10dp"
        app:icon="@drawable/ic_baseline_save" />



</RelativeLayout>