<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_LAY_main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:layoutDirection="rtl"
    tools:context=".Fragments.MainMarketFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/amatica_sc"
            android:text="הפריטים שלך:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/main_buttons_on_main_green" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp">

            <FrameLayout
                android:id="@+id/fragment_LAY_myItems_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fragback"
                />

        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amatica_sc"
            android:text="חיפוש לפי קטגוריה"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/main_buttons_on_main_green"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:elevation="3dp"
            android:fadingEdgeLength="5dp"
            android:backgroundTint="@color/main_background"
            />


        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/fragment_LAY_categories_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="-27dp"
            android:clipToPadding="false"
            android:background="@drawable/fragback5"
            />



    </LinearLayout>
</FrameLayout>

